<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hrbg"
    tools:context=".ActivityOption">

    <Button
        android:id="@+id/userActivity"
        android:layout_width="216dp"
        android:layout_height="88dp"
        android:layout_marginTop="45dp"
        android:background="#191970	"
        android:fontFamily="@font/baloo"
        android:text="Insert Your Activities"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breathActivity" />

    <Button
        android:id="@+id/breathActivity"
        android:layout_width="216dp"
        android:layout_height="88dp"
        android:layout_marginTop="45dp"
        android:background="#191970	"
        android:fontFamily="@font/baloo"
        android:text="Deep Breathing "
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoBtn" />

    <Button
        android:id="@+id/videoBtn"
        android:layout_width="216dp"
        android:layout_height="88dp"
        android:layout_marginTop="200dp"
        android:background="#191970	"
        android:fontFamily="@font/baloo"
        android:text="Tutorials"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/baloo"
        android:text="Stress-Relief Activities"
        android:textAlignment="center"
        android:textColor="#151414"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

</androidx.constraintlayout.widget.ConstraintLayout>